<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/customborder"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/l1_item_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/image_title_price_marginStart"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/l1_item_image1"
        app:layout_constraintTop_toTopOf="parent">

        <com.fyp.barcodebasedpaymentsystem.all.utils.BNTextViewRegular
            android:id="@+id/invoice_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:text="Cust Name" />

        <com.fyp.barcodebasedpaymentsystem.all.utils.BNTextViewRegular
            android:id="@+id/invoice_tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:text="Name" />

        <com.fyp.barcodebasedpaymentsystem.all.utils.BNTextViewRegular
            android:id="@+id/invoice_total_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rv_item_price_marginTop"
            android:textColor="@color/Dark_grey"
            android:textSize="20sp"
            tools:text="RM 100.00" />

        <com.fyp.barcodebasedpaymentsystem.all.utils.BNTextViewRegular
            android:id="@+id/invoice_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rv_item_price_marginTop"
            android:textColor="@color/Dark_grey"
            android:textSize="20sp"
            tools:text="20 Oct 2020"/>

        <com.fyp.barcodebasedpaymentsystem.all.utils.BNTextViewRegular
            android:id="@+id/invoice_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rv_item_price_marginTop"
            android:textColor="@color/colorSnackBarError"
            android:textSize="20sp"
            tools:text="PENDING"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>