<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:contentPadding="10dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.fyp.barcodebasedpaymentsystem.all.utils.BNTextViewRegular
            android:id="@+id/tv_item_price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@color/colorSnackBarError"
            android:textSize="20dp"
            android:text="Price"/>


        <LinearLayout
            android:id="@+id/l1_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rv_item_image_background"
            android:padding="10dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_item_image1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/content_description"
                android:scaleType="fitXY" />
        </LinearLayout>

        <com.fyp.barcodebasedpaymentsystem.all.utils.BNTextViewRegular
            android:id="@+id/tv_item_name1"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textAlignment="center"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>